<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.FoodieGram" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Pon la status bar blanca (o el color que prefieras) -->
        <item name="colorPrimary">@color/naranja</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/gris46</item>
        <item name="colorSurface">@color/white</item>
        <item name="colorOnSurface">@color/black</item>
        <item name="android:statusBarColor">@color/white</item>

        <!-- Este flag hace que Android pinte los iconos y texto en oscuro -->
        <item name="android:windowLightStatusBar">true</item>
    </style>
</resources>